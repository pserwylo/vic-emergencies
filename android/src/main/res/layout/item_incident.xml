<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="25dp"
    android:padding="8dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_icon"
        android:paddingRight="6dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/fire_warning"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_name"
        android:textSize="16sp"
        android:text="Name"
        android:layout_toRightOf="@id/image_icon" />

    <TextView
        android:id="@+id/text_locations"
        android:text="Location 1, Location 2, Location 3"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_icon"
        android:layout_below="@id/text_name"
        android:layout_toLeftOf="@+id/text_resource_count"/>

    <TextView
        android:id="@+id/text_status"
        android:text="Responding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:paddingLeft="6dp"
        android:layout_alignBaseline="@+id/text_name"
        android:layout_alignBottom="@+id/text_name"
        android:layout_alignRight="@+id/text_resource_count"
        android:layout_alignEnd="@+id/text_resource_count"/>

    <TextView
        android:id="@+id/text_resource_count"
        android:text="3 vehicles attending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:paddingLeft="6dp"
        android:layout_below="@+id/text_status"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>